<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".DetailContactActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail de Contact"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"

        android:textSize="30sp" />

    <ImageView
        android:id="@+id/profilImageDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:srcCompat="@tools:sample/avatars" />



        <TextView
            android:id="@+id/nameProfilDetails"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="Lorem ipsum"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/phoneProfilDetails"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="+212 685423215"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/emailProfilDetails"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="exemple@email.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/serviceProfilDetails"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="Comptable"
            android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        >

        <ImageView
            android:id="@+id/iconPhonecall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_call_24"/>

        <ImageView
            android:id="@+id/iconSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_sms_24"/>

        <ImageView
            android:id="@+id/iconEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_email_24"/>

        <ImageView
            android:id="@+id/iconShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_share_24"/>


    </LinearLayout>







    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier les infos"

        />




</LinearLayout>